<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/usp</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">ED6464</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">validate</property>
        <mapping class="Tables.Admin"/>
        <mapping class="Tables.Employee"/>
        <mapping class="Tables.StartDate"/>
        <mapping class="Tables.EndDate"/>
    </session-factory>
</hibernate-configuration>